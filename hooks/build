#!/bin/bash

if [ $SOURCE_BRANCH = "main" ]
then
  PAYLOAD_URL=$PAYLOAD_URL_PROD
  FRONTEND_URL=$FRONTEND_URL_PROD
else
  PAYLOAD_URL=$PAYLOAD_URL_DEV
  FRONTEND_URL=$FRONTEND_URL_DEV
fi

docker build -t $IMAGE_NAME --build-arg PAYLOAD_URL=$PAYLOAD_URL --build-arg FRONTEND_URL=$FRONTEND_URL --build-arg TURNSTILE_SITE_KEY=$TURNSTILE_SITE_KEY --build-arg MATOMO_SITE_ID=$MATOMO_SITE_ID --build-arg MATOMO_ENDPOINT=$MATOMO_ENDPOINT .
docker tag $IMAGE_NAME $DOCKER_REPO:$SOURCE_COMMIT
docker push $DOCKER_REPO:$SOURCE_COMMIT
